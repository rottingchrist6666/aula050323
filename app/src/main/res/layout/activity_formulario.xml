<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formulario"
    android:background="@color/purple_500">

    <EditText
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/form1"
        android:textSize="20dp"
        android:hint="Nome"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <EditText
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form1"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/form2"
        android:hint="CPF"
        android:textColorHint="@color/gray"
        android:textAlignment="center"

        />
    <EditText
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form2"
        android:layout_marginTop="10dp"
        android:id="@+id/form3"
        android:textSize="20dp"
        android:hint="Idade"
        android:textColorHint="@color/gray"
        android:textAlignment="center"
        />

    <EditText
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form3"
        android:layout_marginTop="10dp"
        android:id="@+id/form4"
        android:textSize="20dp"
        android:hint="Email"
        android:textColorHint="@color/gray"
        android:textAlignment="center"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form4"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Apertar"
        android:textColor="@color/black"
        android:id="@+id/botao1"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao1"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Apertar"
        android:textColor="@color/black"
        android:id="@+id/botao2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>